<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="me.blog.eyeballs.mytimeoneview.SecretPage">

    <TextView
        android:text="Developer"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Changwoo Lee"
        android:gravity="center"
        android:textColor="#222222"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Date"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="11.8.2016"
        android:textColor="#222222"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Github"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/secret_git"
        android:text="https://github.com/eyeballss/mytimeOneView"
        android:textColor="#222222"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:onClick="gitAndBlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Blog"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/secret_blog"
        android:text="http://eyeballss.blog.me"
        android:textColor="#222222"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:onClick="gitAndBlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Thank you!"
        android:textColor="#222222"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_margin="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
