<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="39">

            <TextView
                android:typeface="sans"
                android:id="@+id/detail_service_names_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:textSize="13dp"
                android:textColor="#222222"
                android:text="Service names" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:background="#2D8B9E">

                <ListView
                    android:id="@+id/detail_service_names_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="#FFFFFF" />

            </RelativeLayout>


            <TextView
                android:typeface="sans"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:textSize="13dp"
                android:textColor="#222222"
                android:text="Duration" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:background="#2D8B9E">

                <ListView
                    android:id="@+id/detail_duration_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="#FFFFFF" />
            </RelativeLayout>

            <TextView
                android:typeface="sans"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:textSize="13dp"
                android:textColor="#222222"
                android:text="Next Appointment Times" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:background="#2D8B9E">

                <ListView
                    android:id="@+id/detail_next_appointment_times_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="#FFFFFF" />
            </RelativeLayout>

        </LinearLayout>







</LinearLayout>
