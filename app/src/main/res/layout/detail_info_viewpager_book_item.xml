<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <TextView
                android:id="@+id/detail_service_names_textview"
                android:text="service_names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/detail_service_names_listview"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <TextView
                android:text="Duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/detail_duration_listview"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <TextView
                android:text="Next Appointment Times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/detail_next_appointment_times_listview"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>



        </LinearLayout>
    </ScrollView>
</LinearLayout>
