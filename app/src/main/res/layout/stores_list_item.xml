<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/store_name"
        android:text="blah blah store"
        android:singleLine="true"
        android:ellipsize="end"
        android:marqueeRepeatLimit="3"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/store_thumbnail"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="110dp"
            android:layout_height="80dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/store_city_name"
                android:text="Irvine"
                android:singleLine="true"
                android:ellipsize="end"
                android:marqueeRepeatLimit="3"
                android:textSize="15dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/store_service_name"
                android:text="Massage"
                android:singleLine="true"
                android:ellipsize="end"
                android:marqueeRepeatLimit="3"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/store_price"
                android:text="1-1000"
                android:singleLine="true"
                android:ellipsize="end"
                android:marqueeRepeatLimit="3"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom">

                <ImageView
                    android:id="@+id/store_stars"
                    android:layout_width="80dp"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/store_review_count"
                    android:text="(1)"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:marqueeRepeatLimit="3"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
